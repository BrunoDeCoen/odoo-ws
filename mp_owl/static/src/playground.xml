<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="mp_owl.playground">
        <div class="p-3">
            <p>Counter: <t t-esc="state.value"/></p>
            <button class="btn btn-primary"  style="background-color: #990000;" t-on-click="increment">Increment</button>
            <button class="btn btn-primary"  style="background-color: #990000;" t-on-click="showMessage">Show message</button>
        </div>
    </t>
</templates>